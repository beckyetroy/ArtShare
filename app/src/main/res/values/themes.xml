<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Art" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/lighter_pink</item>
        <item name="colorPrimaryVariant">@color/dark_purple</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/lilac</item>
        <item name="colorSecondaryVariant">@color/dark_purple</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>


    <style name="ArtShareToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/purple</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Art.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Movie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Movie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>